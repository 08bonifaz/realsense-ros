<launch>
  <arg name="bag_path"     default="~/test.bag" />

  <!-- Start SLAM -->
  <include file="$(find realsense_ros_slam)/launch/demo_slam_from_bag.launch">
    <arg name="bag_path"     value="$(arg bag_path)" />
  </include>

  <!-- Start test -->
  <test pkg="realsense_ros_slam" type="tests_slam" test-name="realsense_slam_test"
    args="bag_path $(arg bag_path)"
    retry="3" />
</launch>

